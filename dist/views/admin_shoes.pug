extends layout

block content
    p #[a(href='/') Back]&nbsp #[a(href='/user/' + id + '/allShoes') Add Shoes]&nbsp #[a(href='/user/' + id + '/notifications') Notifications]&nbsp #[a(href='/user/' + id + '/leaderboard') Leaderboard]
    h1 All shoes :
    for shoe in shoes
        p Shoe ID: #{shoe.shoe_id} shoe name: #{shoe.model}
        a(href='/admin/' + 'edit_shoe/'+shoe.shoe_id )
            button.btn.btn-primary(type='button') Edit Shoe

        form(method='post' action='/admin/' + 'del_shoe/' + shoe.shoe_id )
            div.form-group
                button.btn.btn-primary(type='submit') Delete shoe


    h1 Add a new shoe to db

    form(method='POST' action='/admin/add_shoe')
        div.form-group
            label(for='md') Add new shoe info:&nbsp
            input#md.form-control(type='text', placeholder=' model',brand='model')
            input#cw.form-control(type='text', placeholder='colorway',name='colorway')
            input#brand.form-control(type='text', placeholder='brand name',name='brand')
            input#idd.form-control(type='text', placeholder='shoe_id',name='id')
            input#cp.form-control(type='text', placeholder='current price',name='current_price')
            input#rp.form-control(type='text', placeholder='retail price',name='retail_price')
            input#sz.form-control(type='text', placeholder='size',name='size')
        button.btn.btn-primary(type='submit') Add Shoe

