extends layout

block content
    p #[a(href='/user/' + id + '/all_shoes') Add Shoes] #[a(href='/user/' + id + '/notifications') Notifications] #[a(href='/') Back]
    h1 #{username}'s Shoes:
    p Sort #[a(href='/user/' + id + '/shoes/sort/price_high') High] #[a(href='/user/' + id + '/shoes/sort/price_low') Low]
    for shoe in data
        a(href='/user/' + id + '/shoes/' + shoe.shoe_id) #{shoe.brand} #{shoe.model} #{shoe.colorway}
        p Size: #{shoe.size}
        p Current market value: $#{shoe.current_price}
        form(method='POST' action='/user/' + id + '/remove_shoe/' + shoe.shoe_id)
            button.btn.btn-primary(type='submit') Remove Shoe
        p ----------------------
