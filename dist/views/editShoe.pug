extends layout
block content
    a(href='/admin/shoes') Back
    h1 Edit Shoe

    form(method='POST' action= '/admin/shoes/' + 'edit_shoe/'+shoe.shoe_id)
        div.form-group
            label shoe
            input#name.form-control(type='text', placeholder= shoe.brand, name='brand', value=shoe.brand)
            input#cw.form-control(type='text', placeholder='colorway',name='colorway',value=shoe.colorway)
            input#cp.form-control(type='text', placeholder='current price',name='current_price',value=shoe.current_price)
            input#rp.form-control(type='text', placeholder='retail price',name='retail_price',value=shoe.retail_price)
            input#sz.form-control(type='text', placeholder='size',name='size',value = shoe.size)
        div.form-group
        button.btn.btn-primary(type='submit') Save Changes

