extends layout

block content
    p #[a(href='/admin') Back]&nbsp
    h1 All users :
    for user in users
        p User ID: #{user.user_id} Username: #{user.username}
        //Each user has buttons for editing router.get(‘/admin/edit_user/:id’)
        a(href='/admin/users/' + 'edit_user/'+user.user_id )
         button.btn.btn-primary(type='button') Edit User

        form(method='post' action='/admin/users/' + 'del_user/' + user.user_id )
             div.form-group
              button.btn.btn-primary(type='submit') Delete User


    h1 Add a new user

    form(method='POST' action='/admin/users/add_user')
        div.form-group
            label(for='name') Username:&nbsp
            input#name.form-control(type='text', placeholder='Enter Name',name='newusername')
            input#Id.form-control(type='text', placeholder='Enter ID',name='newuserid')

        button.btn.btn-primary(type='submit') Add new user



